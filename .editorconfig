# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# 2 space indentation
[{*.js,*.json,*.yml,*.md}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
